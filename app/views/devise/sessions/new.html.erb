<br/>
<div class="row">
  <div class=" col-sm-8 col-md-6 col-lg-4 mx-auto my-auto">
    <div class="card text-center">
      <div class="card-header">Connexion</div>
        <div class="card-body">
          <h5 class="card-title"></h5>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <br/>

              <div class="field form-group">
                <i class="fas fa-envelope"></i>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"formControl" %>
              </div>
              <br/>
 
              <div class="field form-group">
              <br/>
                <i class="fas fa-lock"></i>
                <%= f.password_field :password, autocomplete: "new-password", placeholder:"Mot de passe", class:"formControl" %>
                  
                <% if devise_mapping.rememberable? %>
                  <div class="field form-group">
                  <br/>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>  
                  </div>
                

                <div class="actions">
                <br/>
                  <%= f.submit "Se connecter", class:"btnbis" %>
                </div>
                <br/>
                  <%= render "devise/shared/links" %>
          
            <% end %>
        </div>
      </div> 
    </div>
  </div>
</div>



