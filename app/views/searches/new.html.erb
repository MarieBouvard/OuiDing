<%= form_for @search, html: {class: "pure-form"} do |s| %>
    <div class="field">
        <%= s.label :keywords %><br/>
        <%= s.text_field :keywords %>
    </div>



    <div class="field">
        <%= s.label :rooms %><br/> - <%= s.text_field :rooms %>
    </div>

    <div class="field">
        <p><%= s.label :superficy %><br/> - <%= s.text_field :superficy %></p>
